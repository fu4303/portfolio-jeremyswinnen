<article class="c-card c-card--playlist">
  {% for item in games[item.data.game] %}
    {% if item.cover %}
    <figure class="c-card__figure c-figure"><img src="{{ item.cover }}" alt="{{ item.name }}"></figure>
    {% endif %}
  {% endfor %} 
  {% if item.data.title %}
    <header class="c-card__header">
      <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
    </header>
  {% endif %}
  <div class="c-card__body">
    {{ item.templateContent | truncate: 400 }}
  </div>
  <footer class="c-card__footer">
    <time datetime="{{ item.data.date | date: "%Y-%m-%dT%H:%M:%S.%L%z" }}"><p>Played on {{ item.data.date | date: "%B %e" }} at {{ item.data.date | date: "%l:%M %P" }}</p></time>
  </footer>
</article>