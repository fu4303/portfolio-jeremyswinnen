<article class="c-card c-card--article">
  <figure class="c-card__figure c-figure"><a href="{{ item.url }}"><img src="{{ item.data.cover }}" alt="{{ item.data.title }}"></a></figure>
  <header class="c-card__header">
    <h2><a href="{{ item.url }}">{{ item.data.title }}</a></h2>
  </header>
  <div class="c-card__body">
    <p>{{ item.data.lede }}</p>
  </div>
  <footer class="c-card__footer">
    <time datetime="{{ item.data.date | date: "%Y-%m-%dT%H:%M:%S.%L%z" }}"><p>Written on {{ item.data.date | date: "%B %e" }} at {{ item.data.date | date: "%l:%M %P" }}</p></time>
  </footer>
</article>