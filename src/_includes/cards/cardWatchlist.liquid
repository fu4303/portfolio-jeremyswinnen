<article class="c-card c-card--bookmark">
  <header class="c-card__header">
    <h3><a href="{{ item.url }}">{{ item.data.title }}</a></h3>
  </header>
  <div class="c-card__body">
    <a href="{{ item.data.link }}">{{ item.data.source }}</a>
  </div>
  <footer class="c-card__footer">
    <time datetime="{{ item.data.date | date: "%Y-%m-%dT%H:%M:%S.%L%z" }}"><p>Watched on {{ item.data.date | date: "%B %e" }} at {{ item.data.date | date: "%l:%M %P" }}</p></time>
  </footer>  
</article>